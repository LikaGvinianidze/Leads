<!DOCTYPE html>
<html lang="en">
<!-- begin::Head -->

<head>
  <meta charset="utf-8">
  </meta>
  <title>Leads.ge</title>
  <meta name="description" content="Latest updates and statistic charts">
  </meta>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  </meta>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </meta>
  <!-- begin::Web font -->
  <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
  <script>
    WebFont.load({
      google: {
        "families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"]
      },
      active: function () {
        sessionStorage.fonts = true;
      }
    });
  </script>
  <!-- end::Web font -->
  <!-- begin::Base Styles -->
  <!-- begin::Page Vendors -->
  <link href="../assets/vendors/custom/fullcalendar/fullcalendar.bundle.css" rel="stylesheet" type="text/css">
  </link>
  <!-- end::Page Vendors -->
  <link href="../assets/vendors/base/vendors.bundle.css" rel="stylesheet" type="text/css">
  </link>
  <link href="../assets/demo/default/base/style.bundle.css" rel="stylesheet" type="text/css">
  <link href="../assets/demo/default/base/style.css" rel="stylesheet" type="text/css">
  </link>
  <!-- end::Base Styles -->
</head>
<!-- end::Head -->
<!-- end::Body -->

<body class="m-page--fluid m--skin- m-content--skin-light2 m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
  <!-- begin:: Page -->
  <div class="m-grid m-grid--hor m-grid--root m-page">
    <!-- header -->
    <% include ../../../shared/header.ejs %>
      <!-- begin::Body -->
      <div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body">
        <% include ../../../shared/sidebar.ejs%>
          <div class="m-grid__item m-grid__item--fluid m-wrapper">
            <!-- BEGIN: Subheader -->
            <div class="m-subheader ">
              <div class="d-flex align-items-center">
                <div class="mr-auto">
                  <h3 class="m-subheader__title users-add-title">
                    სერვისის რედაქტირება
                  </h3>
                  <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item m-nav__item--home">
                    
                    </li>
                    
                    <li class="m-nav__item">
                      <a href="/services" class="m-nav__link">
                      <span class="m-nav__link-text">
                        სერვისები
                      </span>
                      </a>
                    </li>
                   
                     
                    </ul>
                </div>
                <div>

                </div>
              </div>
            </div>
            <!-- END: Subheader -->
            <div class="m-content add-users">
              <div class="row">
                <div class="col-md-12">
                  <!--begin::Portlet-->
                  <div class="m-portlet m-portlet--tab">


                  </div>
                  <!--end::Portlet-->
                  <!--begin::Portlet-->
                  <div class="m-portlet m-portlet--tab">

                    <div class="container-fluid">
                      <div class="add-search-inputs users-add">
                        <div class="row">
                          <div class="col-md-12">


                            <form class="m-login__form m-form" id="form-update">
                                <div class="alert alert-success alert-done" role="alert">
                                    სერვისი წარმატებით დაემატა.
                                    </div>
                                    <div class="alert alert-danger alert-error" role="alert">
                                      სამწუხაროდ სერვისი არ დაემატა.
                                    </div>
                              <div class="form-group m-form__group">
                                <label for="NameInput">
                                  სერვისის დასახელება
                                </label>
                                <input type="text" class="form-control m-input" id="NameInput" aria-describedby="emailHelp" name="name" value="<%=service.name%>"/>

                              </div>
                              <div class="form-group m-form__group">
                                <label for="SurnameInput">
                                  სერვისის ღირებულება (ლარი)
                                </label>
                                <input type="text" class="form-control m-input" id="SurnameInput" aria-describedby="emailHelp" name="cost" value="<%=service.cost / 100%>">

                              </div>
                              <div class="form-group m-form__group">
                                <label for="SurnameInput">
                                  რა დრო სჭირდება აღნიშნულ სერვისს (საათი)
                                </label>
                                <input type="text" class="form-control m-input" id="SurnameInput" aria-describedby="emailHelp" name="duration" value="<%=service.duration / 60%>">

                              </div>
                              <div class="form-group m-form__group">
                                  <label for="SurnameInput">
                                    აღწერა
                                  </label>
                                  <input type="text" class="form-control m-input" id="SurnameInput" aria-describedby="emailHelp" name="description" value="<%=service.description %>">
  
                                </div>
                              <% const sexes = JSON.parse(service.sex) %>
                              <div class="m-form__group form-group">
																<label for="">
																	ვისთვის არის განკუთვნილი სერვისი
																</label>
																<div class="m-checkbox-inline checkbox-services">
																	<label class="m-checkbox">
																		<input type="checkbox" name="sex" value="male" <% if (sexes['sex1']==='female' || sexes['sex2']==='female' || sexes['sex3']==='female') { %> checked <% } %> >
																		ქალი
																		<span></span>
																	</label>
																	<label class="m-checkbox">
                                    <input type="checkbox" name="sex" value="female" <% if (sexes['sex1']==='male' || sexes['sex2']==='male' || sexes['sex3']==='male') { %> checked <% } %> >
																		მამაკაცი
																		<span></span>
																	</label>
																	<label class="m-checkbox">
																		<input type="checkbox" name="sex" value="kid" <% if (sexes['sex1']==='kid' || sexes['sex2']==='kid' || sexes['sex3']==='kid') { %> checked <% } %> >
																		ბავშვი
																		<span></span>
																	</label>
																</div>
															
                              </div>
                              <div class="form-group m-form__group row">
                                <label class="col-form-label col-lg-12 col-sm-12">
                                  ორგანიზაცია
                                </label>
                                <% if (hasOrg) { %>
                                  <div class="form-group m-form__group">
                                    <ul class="organization-manager services-org">
                                      <div class="manager-rem">
                                        <li class="manager-name"><%= service.oname %></li>
                                        <!-- <a href="#" id="del" uid="<%= service.id %>" class="orgservice m-portlet__nav-link btn m-btn m-btn--hover-danger m-btn--icon m-btn--icon-only m-btn--pill manager-remove" title="Delete">
                                          <i class="la la-remove"></i>
                                        </a> -->
                                      </div>
                                      <div class="cls"></div>
                                    </ul>
                                  </div>
                                <% } else { %>
                                  <div class="col-lg-12 col-md-12 col-sm-12">
                                    <select name="organization_id" class="form-control m-bootstrap-select m_selectpicker">
                                      <% organizations.forEach(org => { %>
                                        <option value="<%= org.id %>">
                                          <%= org.name %>
                                        </option>
                                      <% }) %>
                                    </select>
                                  </div>
                                <% } %>
                              </div>                        

                              <div class="m-form__actions">
                                <button type="submit" class="btn btn-primary submit">
                                  შენახვა
                                </button>

                              </div>

                            </form>




                          </div>

                        </div>
                      </div>
                    </div>



                    <!--begin::Form-->

                  </div>



                  <!--end::Portlet-->
                </div>

              </div>
            </div>
          </div>
      </div>
      <!-- end:: Body -->
      <% include ../../../shared/footer.ejs %>
  </div>
  <!-- end:: Page -->
  <!-- begin::Scroll Top -->
  <div class="m-scroll-top m-scroll-top--skin-top" data-toggle="m-scroll-top" data-scroll-offset="500" data-scroll-speed="300">
    <i class="la la-arrow-up"></i>
  </div>
  <!-- end::Scroll Top -->

  <!-- begin::Base Scripts -->
  <script src="../assets/vendors/base/vendors.bundle.js" type="text/javascript"></script>
  <script src="../assets/demo/default/base/scripts.bundle.js" type="text/javascript"></script>
  <script src="../assets/demo/default/base/services.js" type="text/javascript"></script>
  <script src="../assets/demo/default/base/select.js" type="text/javascript"></script>
  <!-- end::Base Scripts -->
  <!-- begin::Page Vendors -->
  <script src="../assets/vendors/custom/fullcalendar/fullcalendar.bundle.js" type="text/javascript"></script>
  <!-- end::Page Vendors -->
  <!-- begin::Page Snippets -->
  <script src="../assets/app/js/dashboard.js" type="text/javascript"></script>
  <!-- end::Page Snippets -->
  <script>
    $('.alert-done').hide();
    $('.alert-error').hide();
  </script>
</body>
<!-- end::Body -->

</html>