<!DOCTYPE html>
<html lang="en">
<!-- begin::Head -->

<head>
  <meta charset="utf-8">
  </meta>
  <title>Leads.ge</title>
  <meta name="description" content="Latest updates and statistic charts">
  </meta>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  </meta>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </meta>
  <!-- begin::Web font -->
  <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
  <script>
    WebFont.load({
      google: {
        "families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"]
      },
      active: function () {
        sessionStorage.fonts = true;
      }
    });
  </script>
  <!-- end::Web font -->
  <!-- begin::Base Styles -->
  <!-- begin::Page Vendors -->
  <link href="../../../assets/vendors/base/vendors.bundle.css" rel="stylesheet" type="text/css" />
  <link href="../../../assets/demo/default/base/style.bundle.css" rel="stylesheet" type="text/css" />
  <link href="../../../assets/demo/default/base/style.css" rel="stylesheet" type="text/css">
  </link>
  <!-- end::Base Styles -->
</head>
<!-- end::Head -->
<!-- end::Body -->

<body class="m-page--fluid m--skin- m-content--skin-light2 m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
  <!-- begin:: Page -->
  <div class="m-grid m-grid--hor m-grid--root m-page">
    <!-- header -->
    <% include ../../../shared/header.ejs %>
      <!-- begin::Body -->
      <div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body">
        <% include ../../../shared/sidebar.ejs%>
          <div class="m-grid__item m-grid__item--fluid m-wrapper">

            <div class="m-subheader ">
              <div class="d-flex align-items-center">
                <div class="mr-auto">
                  <h3 class="m-subheader__title users-add-title">
                    პერსონალის რედაქტირება
                  </h3>
                  <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item m-nav__item--home">

                    </li>

                    <li class="m-nav__item">
                      <a href="/personnel" class="m-nav__link">
                        <span class="m-nav__link-text">
                          პერსონალი
                        </span>
                      </a>
                    </li>


                  </ul>
                </div>
                <div>

                </div>
              </div>
            </div>

            <div class="m-content add-users">
              <div class="row">
                <div class="col-md-12">
                  <!--begin::Portlet-->
                  <div class="m-portlet m-portlet--tab">


                  </div>
                  <!--end::Portlet-->
                  <!--begin::Portlet-->
                  <div class="m-portlet m-portlet--tab">

                    <div class="container">
                      <div class="add-search-inputs users-add">
                        <div class="row">
                          <div class="col-md-12">


                            <form class="m-login__form m-form" id="form-update">


                              <div class="form-group m-form__group">
                                <label for="MobileInput">
                                  სახელი
                                </label>
                                <input type="text" class="form-control m-input" id="MobileInput" name="firstname" value="<%= employ.firstname %>" aria-describedby="emailHelp">

                              </div>

                              <div class="form-group m-form__group">
                                <label for="MobileInput">
                                  გვარი
                                </label>
                                <input type="text" class="form-control m-input" id="MobileInput" name="lastname" value="<%= employ.lastname %>" aria-describedby="emailHelp">

                              </div>

                              <div class="form-group m-form__group">
                                <label class="col-form-label">
                                  დაბადების თარიღი
                                </label>
                                <div class="date-picker">
                                  <input type='text' class="form-control" id="ge_datepicker" name="dateofbirth" value="<%= employ.dateofbirth %>" />
                                </div>
                              </div>

                              <div class="form-group m-form__group row">
                                <label for="example-tel-input" class="col-12 col-form-label">
                                  მობილურის ნომერი
                                </label>
                                <div class="col-12">
                                  <input class="form-control m-input" type="tel" name="phone" value="<%= employ.phone %>" id="example-tel-input">
                                </div>
                              </div>
                              <div class="form-group m-form__group">
                                <label for="MobileInput">
                                  ელფოსტა
                                </label>
                                <input type="text" class="form-control m-input" id="MobileInput" name="email" value="<%= employ.email %>" aria-describedby="emailHelp">

                              </div>

                              <div class="form-group m-form__group">
                                <label for="MobileInput">
                                  Facebook
                                </label>
                                <input type="text" class="form-control m-input" id="MobileInput" name="facebook" value="<%= employ.facebook %>" aria-describedby="emailHelp">

                              </div>

                              <div class="form-group m-form__group">
                                <label class="manager-title">პერსონალის სერვისები</label>
                                <ul class="organization-manager">
                                  <% empServices.forEach(empService => { %>
                                      <div class="manager-rem">
                                        <a href="#" class="manager-name"><li><%= empService.name %></li></a>
                                        <a href="#" id="del" sid="<%= empService.id %>" eid="<%= employ.id %>" class="empservice m-portlet__nav-link btn m-btn m-btn--hover-danger m-btn--icon m-btn--icon-only m-btn--pill manager-remove" title="Delete">
                                          <i class="la la-remove"></i>
                                        </a>
                                      </div>
                                  <% }) %>
                                  <div class="cls"></div>
                                </ul>
                              </div>
                              <div class="form-group m-form__group row">
                                <label class="col-form-label col-lg-12 col-sm-12">
                                  სერვისები
                                </label>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                  <select name="service" class="form-control m-bootstrap-select m_selectpicker" multiple>
                                    <% services.forEach(service => { %>
                                      <option value="<%= service.id%>"><%= service.name %></option>
                                    <% }) %>
                                  </select>
                                </div>
                              </div>

                              <div class="form-group m-form__group">
                                <div class="working-hours">მუშაობის განრიგი </div>


                                <% const days = ['ორშაბათი','სამშაბათი','ოთხშაბათი','ხუთშაბათი','პარასკევი','შაბათი','კვირა']	%>

                                  <% workDays.forEach(workDay => { %>
                                    <div class="form-group m-form__group row">
                                      <label class="col-form-label col-lg-2 col-sm-12 col-md-2 working-hours-label">
                                        <%= days[workDay.day] %>
                                      </label>
                                      <div class="col-lg-5 col-md-5 col-sm-12">
                                        <div class="row">
                                          <input type='text' class="form-control col-md-10" name="from" id="m_timepicker_2" value="<%= workDay.from %>">
                                          <div class="col-md-2 time-picker-text">დან</div>

                                        </div>

                                      </div>
                                      <div class="col-lg-5 col-md-5 col-sm-12">
                                        <div class="row">
                                          <input type='text' class="form-control col-md-10" name="to" id="m_timepicker_3" value="<%= workDay.to %>" />
                                          <div class="col-md-2 time-picker-text">მდე</div>

                                        </div>
                                      </div>
                                    </div>
                                    <% }) %>
                              </div>

                              <div class="m-form__actions add-button">
                                <button type="submit" class="btn btn-primary submit">
                                  შენახვა
                                </button>

                              </div>
                            </form>




                          </div>

                        </div>
                      </div>
                    </div>



                    <!--begin::Form-->

                  </div>



                  <!--end::Portlet-->
                </div>

              </div>
            </div>



          </div>
      </div>
      <% include ../../../shared/footer.ejs %>
  </div>
  <!-- end:: Body -->
  </div>
  <!-- end:: Page -->
  <!-- begin::Scroll Top -->
  <div class="m-scroll-top m-scroll-top--skin-top" data-toggle="m-scroll-top" data-scroll-offset="500" data-scroll-speed="300">
    <i class="la la-arrow-up"></i>
  </div>
  <!-- end::Scroll Top -->

  <!-- begin::Base Scripts -->
  <script src="../../assets/app/js/jquery.js" type="text/javascript"></script>
  <script src="../../assets/vendors/base/vendors.bundle.js" type="text/javascript"></script>
  <script src="../../assets/demo/default/base/scripts.bundle.js" type="text/javascript"></script>
  <script src="../../assets/demo/default/base/personnel.js" type="text/javascript"></script>
  <script src="../../assets/demo/default/custom/components/forms/widgets/bootstrap-timepicker.js" type="text/javascript"></script>
  <script src="../../assets/demo/default/custom/components/forms/widgets/datepicker.js" type="text/javascript" charset="UTF-8"></script>
  <script src="../assets/demo/default/base/select.js" type="text/javascript"></script>
  <!-- end::Page Snippets -->
</body>
<!-- end::Body -->

<script>

  $.fn.datepicker.dates['en'] = {
    days: ["", "", "", "", "", "", ""],
    daysShort: ["", "", "", "", "", "", ""],
    daysMin: ["", "", "", "", "", "", ""],
    months: ["იანვარი", "თებერვალი", "მარტი", "აპრილი", "მაისი", "ივნისი", "ივლისი", "აგვისტო", "სექტემბერი", "ოქტომბერი", "ნოემბერი", "დეკემბერი"],
    monthsShort: ["იან", "თებ", "მარ", "აპრ", "მაი", "ივნ", "ივლ", "აგვ", "სექ", "ოქტ", "ნოე", "დეკ"],
    today: "Today",
    clear: "Clear",
    format: "yyyy-mm-dd",
    titleFormat: "MM yyyy", /* Leverages same syntax as 'format' */
    weekStart: 0,
  };

  $('#ge_datepicker').datepicker({
    language: 'en',
    orientation: 'bottom',

  });




</script>

</html>